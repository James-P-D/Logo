// We can set the RGB properties for the turtle pen

setcolorr 255;
setcolorg 0;
setcolorb 0;
repeat 36 {
  forward 10;
  rightturn 10;
}

rightturn 120;

setcolorr 0;
setcolorg 255;
setcolorb 0;
repeat 36 {
  forward 10;
  rightturn 10;
}

rightturn 120;

